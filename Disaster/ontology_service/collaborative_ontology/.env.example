# 애플리케이션 설정
APP_NAME="Collaborative Energy Ontology Platform"
APP_VERSION="1.0.0"
DEBUG=true

# API 설정
API_V1_PREFIX="/api/v1"

# 보안 (운영 환경에서는 반드시 변경!)
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM="HS256"

# 데이터베이스
DATABASE_URL="postgresql://ontology_user:ontology_pass@localhost:5432/collaborative_ontology"

# Redis
REDIS_URL="redis://localhost:6379/0"

# CORS (필요에 따라 추가)
BACKEND_CORS_ORIGINS='["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]'

# 파일 업로드
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760

# 이메일 (옵션 - 알림 기능 사용 시 설정)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL=""
EMAILS_FROM_NAME=""

# 첫 번째 슈퍼유저
FIRST_SUPERUSER_EMAIL="admin@gnginternational.com"
FIRST_SUPERUSER_USERNAME="admin"
FIRST_SUPERUSER_PASSWORD="changeme123"

# 온톨로지 설정
DEFAULT_NAMESPACE="energy"
MAX_PROPOSAL_APPROVALS_REQUIRED=3

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30

# 로깅
LOG_LEVEL="INFO"
