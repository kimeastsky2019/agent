# Energy Orchestrator Platform - Environment Variables
# 프로덕션 배포 시 .env 파일을 생성하고 이 값들을 설정하세요
# cp env.example .env 후 편집하세요

# Application
APP_NAME=Energy Orchestrator Platform
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Database
POSTGRES_USER=energy_admin
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=energy_db
DB_PORT=5432

# Redis
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
REDIS_PORT=6379

# Security (프로덕션에서는 반드시 변경하세요!)
SECRET_KEY=CHANGE_THIS_GENERATE_STRONG_SECRET_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (프로덕션 도메인 추가)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# MQTT
MQTT_PORT=1883
MQTT_WS_PORT=9001

# Kafka
KAFKA_EXTERNAL_HOST=your-server-ip-or-domain
KAFKA_PORT=9092

# External APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
WEATHER_API_KEY=YOUR_WEATHER_API_KEY
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
NIED_API_URL=https://api.nied.go.jp

# Ontology
JENA_ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
JENA_PORT=3030

# Monitoring
SENTRY_DSN=
GRAFANA_URL=http://localhost:3001

# Ports
FRONTEND_PORT=80
BACKEND_PORT=8000

# Frontend
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com/ws


